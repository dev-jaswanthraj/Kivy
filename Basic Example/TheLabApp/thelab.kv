#:kivy 2.0.0

AnchorLayoutExample:
<AnchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        spacing: "5dp"
        size_hint: .5, .2
        Button:
            text:"A"
            
        Button:
            text:"B"


<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size: "40dp", "100dp"
        size_hint: None, None
        # x, center_x, right // orientation: "vertical"
        # y, center_y, top  // orientation: "horizontal"
        #pos_hint: {"center_x":.5}
    Button:
        text: "B"
        size_hint: .5, .5
        #pos_hint: {"right":1}
    Button:
        text: "C"
        size_hint: None, None
        width: "50dp"
        height: "100dp"
        #pos_hint: {"right":.55}
    Button:
        text: "D"
        size_hint: None, 1
        width: "50dp"
    Button:
        text: "E"
        size_hint: 1, None
        height: "100dp"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Button:
            text: "A1"
        Button:
            text: "B1"
        Button:
            text: "C1"
        Button:
            text: "D1"
    
    Label:
        text: "Label"


<MainWidget>:
    Button:
        text: "Hello1"
        size: "100dp", "100dp"
        pos: "100dp", "200dp"
    Label:
        text: "Hello2"
        size: "100dp", "100dp"
        pos: "200dp", "300dp"

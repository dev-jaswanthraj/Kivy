#:kivy 2.0.0
WidgetExample
<WidgetExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.toggle_on(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Count"
        #on_press: root.on_press_event()
        on_press: root.increment()
        disabled: not root.state
    Label:
        #text: root.my_text
        text: root.count
        font_name: r"C:\Users\HP\Desktop\Kivy Proj\Basic Example\Widgets\Fonts\LED.ttf"
        font_size: "100dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        size_hint: None, 1
        width: "100dp"
        #on_active: root.switch_on(self)
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        #on_value: root.slider_value(self)
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            font_size: "100dp"
            color: .6, .8, 1, 1
        ProgressBar:
            # min always 0
            max: 100
            value: my_slider.value
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Enter your Name"
            size_hint: None, None
            width: "120dp"
            height: "20dp"
        TextInput:
            id: my_text_input
            size_hint: None, 1
            width: "100dp"
            text: ""
            multiline: False
            on_text_validate: root.on_text_validate(self)
    Label:
        text: root.text_input_str